<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White_Sushi"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/dark_wave">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/light_wave"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="40sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/Veige_Sushi"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/doge_logo"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edt_nombre_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/text_line"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#717171"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_appaterno_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/text_line"
            android:hint="Apellido Paterno"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#717171"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_apmaterno_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/text_line"
            android:hint="Apellido Materno"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#717171"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_correo_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/text_line"
            android:hint="Correo Electrónico"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#717171"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_contraseña_Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/text_line"
            android:hint="Contraseña"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="#717171"
            android:textColorHint="@color/brown_light"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnIngresarUsuario"
            style="@android:style/Widget.Button"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn_bg_1"
            android:onClick="llamar_menu_login"
            android:gravity="center"
            android:text="Ingresar"
            android:textColor="@color/brown_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRegistrarseUsuario"
            style="@android:style/Widget.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:background="@drawable/btn_bg_0"
            android:onClick="llamar_signup_login"
            android:gravity="center"
            android:text="Registrarse"
            android:textColor="@color/brown_light"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>