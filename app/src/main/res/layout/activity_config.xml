<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/BACKGROUD_DAY"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/dark_wave">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/light_wave"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titulo_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_config"
                android:textSize="40sp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/brown_light"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="40dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_icon"/>
        <TextView
            android:id="@+id/menu_conf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/brown_light"
            android:text="@string/menu_config"/>

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/doge_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_bg_0"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/contraste_conf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_contrast"
            android:textColor="@color/text_color_dark"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"/>

        <Switch
            android:id="@+id/switch_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginRight="30dp">
        </Switch>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_bg_0"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:id="@+id/idioma_conf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_language"
            android:textColor="@color/text_color_dark"
            android:textSize="24sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
        <Switch
            android:id="@+id/switch_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginRight="30dp">
        </Switch>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotationX="180"
            android:rotation="180"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/clear_layout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/wave"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>


    </LinearLayout>
</LinearLayout>